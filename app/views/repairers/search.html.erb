<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>REPARADORES</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @repairers.each do |repairer| %>
      <tr>
        <td><%= repairer.first_name %></td>
        <td><%= repairer.last_name %></td>
        <td><%= repairer.bio %></td>
        <td><%= repairer.phone %></td>
        <td><%= repairer.address %></td>
        <td><%= repairer.city %></td>
        <td><%= repairer.mail %></td>
        <td><%= repairer.cellphone %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/repairers" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Atras</a>
</div>