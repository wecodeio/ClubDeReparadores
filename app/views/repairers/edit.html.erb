<h1>Editing Repairer</h1>

<%= render 'form', repairer: @repairer %>
<%= form_for(@repairer) do |f| %>
    <%= f.label :Nombre %>
    <%= f.text_field :first_name %>
    <br><br>
    <%= f.label :Apellido %>
    <%= f.text_field :last_name %>
    <br><br>
    <%= f.label :Telefono %>
    <%= f.text_field :phone %>
    <br><br>
    <%= f.label :Direccion %>
    <%= f.text_field :address %>
    <br><br>
    <%= f.label :Ciudad %>
    <%= f.text_field :city %>
    <br><br>
    <%= f.label :Email %>
    <%= f.text_field :mail %>
    <br><br>
    <%= f.label :Biografia %>
    <%= f.text_area :bio %>
    <br><br>
    <%= f.submit %>
    <% end %>
<%= link_to 'Show', @repairer %> |
<%= link_to 'Back', repairers_path %>
