<div class="container-fluid">
<h1>NUEVO REPARADOR</h1>
<br>
<%= form_for(@repairer) do |f| %>
  <% if @repairer.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@repairer.errors.count, "error") %> prohibited this repairer from being saved:</h2>
    <ul>
    <% @repairer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  <% end %>

<form>
  <div class="form-row">
    <div class="col-md-4 mb-3">
    <i class="fas fa-user"></i>
      <label>Nombre</label>
      <%= f.text_field :first_name %>
      </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-user"></i>
      <label>Apellido</label>
      <%= f.text_field :last_name %>
    </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-phone"></i>
      <label>Telefono</label>
       <%= f.text_field :phone %>
       </div>
  </div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
    <p> <%= @repairer.address%> </p>
    <i class="fas fa-map-marker-alt"></i>
      <label>Direccion</label>
      <%= f.text_field :address %>
    </div>
    <div class="col-md-4 mb-3">
    <p> <%= @repairer.city%> </p>
    <i class="fas fa-city"></i>
      <label>Ciudad</label>
      <%= f.text_field :city %>
    </div>
    <div class="col-md-4 mb-3">
    <p> <%= @repairer.mail%> </p>
    <i class="fas fa-envelope-open-text"></i>
      <label>Email</label>
      <%= f.text_field :mail %>
    </div>
    
      <div class="col-md-4 mb-3">
      <i class="fas fa-edit"></i>
       <label>Biografia</label>
       <%= f.text_area :bio %>
     
    </div>
  </div>
</form>
  <div class="actions">
  <input class="btn btn-primary btn-lg active" type="submit" value="Aceptar">
  <a href="/" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Atras</a>      
  </div>

<% end %>
</div>