<%= form_for([:admin,@repairer]) do |f| %>
  <% if @repairer.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@repairer.errors.count, "error") %> prohibited this repairer from being saved:</h2>
  
    <ul>
    <% @repairer.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  <% end %>
  <div class="form-row">
    <div class="col-md-4 mb-3">
    <i class="fas fa-user"></i>
      <label>Nombre</label>
      <%= f.text_field :first_name, {class:"form-control"} %>
      </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-user"></i>
      <label>Apellido</label>
      <%= f.text_field :last_name, {class:"form-control"} %>
    </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-phone"></i>
      <label>Telefono</label>
       <%= f.text_field :phone, {class:"form-control"} %>
       </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-map-marker-alt"></i>
      <label>Direccion</label>
      <%= f.text_field :address, {class:"form-control"} %>
    </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-city"></i>
      <label>Ciudad</label>
      <%= f.text_field :city, {class:"form-control"} %>
    </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-envelope-open-text"></i>
      <label>Email</label>
      <%= f.text_field :mail, {class:"form-control"} %>
    </div>
    <div class="col-md-4 mb-3">
    <i class="fas fa-mobile-alt"></i>
      <label>Celular</label>
      <%= f.text_field :cellphone, {class:"form-control"} %>
    </div>
    <div class="col-md-4 mb-3">
      <i class="fas fa-edit"></i>
       <label>Biografia</label>
       <%= f.text_area :bio, {class: 'form-control'} %>
    </div>
  </div> 
    
